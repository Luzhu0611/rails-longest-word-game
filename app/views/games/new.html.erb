<h1>New game</h1>
<div class="game">
<% @letters.each do |letter| %>
<div class= "card">
  <p><%=letter%></p>
</div>
<% end %>
</div>
<form action="/games/score" method="get">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="text" name="word" placeholder="What is your longest word">
  <input type="submit" value="Play">
  <%= hidden_field_tag 'letters', @letters %>
</form>


